@model CourseBasicInformationViewModel

@using (Html.BeginForm("SaveCourse", "Instructor", FormMethod.Post))
{
    <div class="alert-container"></div>
    <div class="form-group">
        <label>Categoría <span class="required">*</span></label>
        <select class="form-control" name="CategoryId">
            @foreach (var c in Model.Categories)
            {
                <option value="@c.Id">@c.Name</option>     
            }
        </select>
    </div>

    <div class="form-group">
        <label>Nombre <span class="text-danger">*</span></label>
        <input type="text" name="Name" class="form-control" value="@Model.Course.Name"/>
        <span data-key="Name" class="form-validation-failed"></span>
    </div>

    <div class="form-group">
        <label>Descripción <span class="required">*</span></label>
        <textarea name="Description" class="form-control" @Model.Course.Description></textarea>
        <span data-key="Description" class="form-validation-failed"></span>
    </div>

    <div class="form-group">
        <label>Precio <span class="text-danger">*</span></label>
        <div class="input-group">
            <input type="text" name="Price" class="form-control" value="@Model.Course.Price" />
            <span class="input-group-addon"><b>Ingreso (70%)</b>: $ 0.00</span>
        </div>
        <span class="help-block">Un curso equivalente a cero es un curso gratuito para los estudiantes. La comisión de venta es de un @(Parameters.SalesCommission)%.</span>
        <span data-key="Price" class="form-validation-failed"></span>
    </div>

    <div class="text-right">
        <button type="submit" data-ajax="true" class="btn btn-default">
            Guardar
        </button>
    </div>
}