<div class="row">
    <div class="col-sm-6">
        <div class="thumbnail">
            <img src="~/Assets/images/courses/no-image.jpg" />
        </div>
    </div>
    <div class="col-sm-6">
        @using (Html.BeginForm("Image", "Instructor", FormMethod.Post))
        {
            <div class="form-group">
                <label>Imagen <span class="required">*</span></label>
                <input type="file" name="Image" class="form-control" />
                <span class="help-block">Solo se aceptan imágenes válidas en formato jpg, gif, png y que no exceda de los 900 x 473 pixeles.</span>
            </div>

            <div class="text-right">
                <button class="btn btn-default">
                    Guardar
                </button>
            </div>
        }
    </div>
</div>