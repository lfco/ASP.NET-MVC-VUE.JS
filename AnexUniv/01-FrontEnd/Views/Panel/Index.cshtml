@{
    ViewBag.Title = "Inicio";
}
<h1 class="page-header">@ViewBag.Title</h1>

@Html.Partial("Partials/_Menu", Enums.PanelMenu.Home)

<h2 class="page-header">Ingresos</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Ingreso Total
                <span class="badge pull-right">
                    <i class="fa fa-line-chart"></i>
                </span>
            </div>
            <ul class="list-group">
                <li class="list-group-item">
                    Ingreso Total (100 %)<span class="badge">$ 12,500.25</span>
                </li>
                <li class="list-group-item">
                    Ingreso @Parameters.ProjectName (@(Parameters.SalesCommission)%) <span class="badge">$ 5,250.12</span>
                </li>
                <li class="list-group-item">
                    Pago a profesores (@(100 - Parameters.SalesCommission)%) <span class="badge">$ 7,250.12</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Ingreso del mes actual
                <span class="badge pull-right">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
            <ul class="list-group">
                <li class="list-group-item">
                    Ingreso Total (100 %)<span class="badge">$ 2,500.25</span>
                </li>
                <li class="list-group-item">
                    Ingreso @Parameters.ProjectName (@(Parameters.SalesCommission)%) <span class="badge">$ 750.12</span>
                </li>
                <li class="list-group-item">
                    Pago a profesores (@(100 - Parameters.SalesCommission)%) <span class="badge">$ 1,750.12</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<h2 class="page-header">Estadística</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Variación Porcentual (Mes actual)
                <span class="badge pull-right">
                    <i class="fa fa-line-chart"></i>
                </span>
            </div>
            <ul class="list-group">
                <li class="list-group-item">
                    Ingreso @Parameters.ProjectName <span class="badge"><i class="fa fa-level-up"></i> 25%</span>
                </li>
                <li class="list-group-item">
                    Alumnos <span class="badge"><i class="fa fa-level-up"></i> 25%</span>
                </li>
                <li class="list-group-item">
                    Profesores <span class="badge"><i class="fa fa-level-up"></i> 25%</span>
                </li>
                <li class="list-group-item">
                    Cursos creados <span class="badge"><i class="fa fa-level-up"></i> 25%</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                Media aritmética (Por mes)
                <span class="badge pull-right">
                    <i class="fa fa-bar-chart"></i>
                </span>
            </div>
            <ul class="list-group">
                <li class="list-group-item">
                    Ingreso @Parameters.ProjectName <span class="badge">$ 100,200.00</span>
                </li>
                <li class="list-group-item">
                    Alumnos <span class="badge">100</span>
                </li>
                <li class="list-group-item">
                    Profesores <span class="badge">7</span>
                </li>
                <li class="list-group-item">
                    Cursos creados <span class="badge">7</span>
                </li>
            </ul>
        </div>
    </div>
</div>