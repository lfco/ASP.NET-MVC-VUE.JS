@{
    ViewBag.Title = "Cursos";
}
<h1 class="page-header">@ViewBag.Title</h1>

@Html.Partial("Partials/_Menu", Enums.PanelMenu.Courses)

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th style="width:200px;">Profesor</th>
            <th class="text-right" style="width:100px;">Alumnos</th>
            <th class="text-right" style="width:100px;">Lecciones</th>
            <th style="width:150px;">Estado</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 1; i < 20; i++)
        {
            <tr>
                <td>Curso @i</td>
                <td>Profesor @i</td>
                <td class="text-right">@(i * 2)</td>
                <td class="text-right">@(i * 10)</td>
                <td>
                    <select class="form-control input-sm">
                        <option class="1">Pendiente</option>
                        <option class="1">Rechazado</option>
                        <option class="1">Aprobado</option>
                    </select>
                </td>
            </tr>
        }
    </tbody>
</table>